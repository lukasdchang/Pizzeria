<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pizzeria"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Pizzeria">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Additional Activities -->
        <activity android:name=".MainMenuActivity"
            android:exported="true"
            android:label="@string/main_menu_title"
            android:theme="@style/Theme.Pizzeria" />

        <activity android:name=".OrderActivity"
            android:exported="true"
            android:label="@string/order_title"
            android:theme="@style/Theme.Pizzeria" />

        <activity android:name=".OrderSummaryActivity"
            android:exported="true"
            android:label="@string/order_summary_title"
            android:theme="@style/Theme.Pizzeria" />

        <activity android:name=".BuildYourOwnActivity"
            android:exported="true"
            android:label="@string/build_your_own_title"
            android:theme="@style/Theme.Pizzeria" />

    </application>

</manifest>