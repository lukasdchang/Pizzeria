<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ff4d4d">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="RU Pizzeria Menu"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Menu Buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- Chicago Style Button -->
        <Button
            android:id="@+id/chicagoStyleButton"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/button_background"
            android:text="Chicago Style"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawableTop="@drawable/chicago_style"
            android:gravity="center" />

        <!-- NY Style Button -->
        <Button
            android:id="@+id/nyStyleButton"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/button_background"
            android:text="NY Style"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawableTop="@drawable/ny_style"
            android:gravity="center" />

        <!-- Orders Placed Button -->
        <Button
            android:id="@+id/ordersPlacedButton"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/button_background"
            android:text="Orders Placed"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawableTop="@drawable/orders_summary"
            android:gravity="center" />

        <!-- Current Order Button -->
        <Button
            android:id="@+id/currentOrderButton"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/button_background"
            android:text="Current Order"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawableTop="@drawable/current_order"
            android:gravity="center" />
    </GridLayout>
</LinearLayout>